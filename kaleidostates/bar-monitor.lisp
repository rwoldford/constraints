(defclass bar-monitor (monitor)  ((bar-slider    :accessor bar-slider-of    :initarg :bar-slider    :initform (make-instance 'bar-slider :orientation :vertical)    :documentation    "The slot for the bar-slider object that this constraint ~     will use to display its constrained variable."))  (:documentation  "A constraint which displays the value of the constrained ~   variable on a bar slider"))(defmethod update-monitor-display           ((b bar-monitor) informant)  (setf (slider-level-of (bar-slider-of b))         (state-of informant :as-seen-by b))  (reposition-view (bar-slider-of b)))  